{
  "name": "@gleanwork/connect-mcp-server",
  "version": "0.2.2",
  "description": "Remote proxy for Model Context Protocol, allowing local-only clients to connect to remote servers using oAuth",
  "keywords": [
    "mcp",
    "stdio",
    "sse",
    "remote",
    "oauth"
  ],
  "author": "Glen Maddern <glen@cloudflare.com>",
  "repository": "https://github.com/gleanwork/connect-mcp-server",
  "type": "module",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "main": "dist/index.js",
  "exports": {
    "./lib": {
      "types": "./dist/lib/index.d.ts",
      "import": "./dist/lib/index.js"
    },
    "./package.json": "./package.json"
  },
  "bin": {
    "connect-mcp-server": "dist/proxy.js",
    "connect-mcp-server-client": "dist/client.js"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "check": "prettier --check . && tsc",
    "lint-fix": "prettier --check . --write",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "release": "release-it"
  },
  "dependencies": {
    "express": "^4.21.2",
    "open": "^10.1.0",
    "strict-url-sanitise": "^0.0.1"
  },
  "devDependencies": {
    "@modelcontextprotocol/sdk": "https://pkg.pr.new/gleanwork/typescript-sdk/@modelcontextprotocol/sdk@8f6ea2a",
    "@release-it-plugins/lerna-changelog": "^6.0.0",
    "@types/express": "^5.0.0",
    "@types/node": "^22.13.10",
    "prettier": "^3.5.3",
    "release-it": "^17.0.0",
    "tsup": "^8.4.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "vitest": "^3.2.3"
  },
  "tsup": {
    "entry": [
      "src/client.ts",
      "src/proxy.ts",
      "src/lib/index.ts"
    ],
    "format": [
      "esm"
    ],
    "dts": true,
    "clean": true,
    "outDir": "dist",
    "external": []
  },
  "vitest": {
    "environment": "node",
    "globals": true,
    "include": [
      "src/**/*.test.ts"
    ]
  },
  "packageManager": "pnpm@10.11.0+sha512.6540583f41cc5f628eb3d9773ecee802f4f9ef9923cc45b69890fb47991d4b092964694ec3a4f738a420c918a333062c8b925d312f42e4f0c263eb603551f977",
  "release-it": {
    "npm": {
      "publish": true
    },
    "git": {
      "tagName": "v${version}",
      "requireCleanWorkingDir": false
    },
    "plugins": {
      "@release-it-plugins/lerna-changelog": {
        "infile": "CHANGELOG.md",
        "launchEditor": true
      }
    },
    "github": {
      "release": true,
      "tokenRef": "GITHUB_AUTH"
    }
  }
}
